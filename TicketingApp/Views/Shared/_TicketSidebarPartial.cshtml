<div class="ticket-sidebar">
    <div class="ticket-sidebar__action">
        <div class="ticket-sidebar__status">
            <button>Tickets</button>
            <button>Solved</button>
            <button>Opened</button>
        </div>
        <div class="ticket-sidebar__create">
            <a class="ticket-card__link-wrapper" asp-controller="Home" asp-action="TicketCreate">
                <button>Create New +</button>
            </a>
</div>
    </div>
    <div class="ticket-sidebar__frame">
        @await Html.PartialAsync("_TicketFramePartial", ("opened", true))
        @await Html.PartialAsync("_TicketFramePartial", ("opened", true))
        @await Html.PartialAsync("_TicketFramePartial", ("opened", false))
        @await Html.PartialAsync("_TicketFramePartial", ("solved", false))
        @await Html.PartialAsync("_TicketFramePartial", ("solved", false))
    </div>
</div>